{
    "manifest_version": 2,
    "name": "Two Tabs Open",
    "version": "1.1.0",
    "description": "Alerts you if you have 2 tabs open to the same page",

    "background": {
        "scripts": ["logic.js"]
    },

    "options_ui": {
        "page": "options.html",
        "chrome_style": true
    },

    "permissions": [
        "activeTab",
        "tabs",
        "storage",
        "*://*/*"
    ],

    "browser_action": {
        "default_title": "Two Tabs Open",
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },

    "content_scripts": [{
        "matches": ["*://*/*"],
        "js": ["content_script.js"]
    }]
}
